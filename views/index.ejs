                </svg><span class="ms-1"> <%=seaLevel%></span></div>
              </div>
              <div>
                <img class="mainWeather" src=<%=mainWeatherImg%> width="100px">
                <!-- <img class="mainWeather" src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-weather/ilu1.webp" width="100px"> -->
              </div>
            </div>
  
          </div>
        </div>
  
      </div>
    </div>
  </div>

  <div class="weather__forecast d-flex flex-row justify-content-center align-items-center mt-3">
    <% forecastList.slice(0, 8).forEach((forecast) => { %> 
    <div class="p-4 d-flex flex-column justify-content-center align-items-center">
        <span><%=forecast.date%></span>
        <span><%=forecast.time%></span>
        <img src=<%=forecast.image%>>
        <span><%=forecast.temp%>Â°C</span>
        
    </div>
    <%});%>
  </div>
  
</body>
</html>